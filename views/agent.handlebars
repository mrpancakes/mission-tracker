<nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid m-lg-5 nav-details d-flex justify-content-between">
                <div class="d-flex align-items-center">
                        <a class="navbar-brand" href="#">
                                <img src="/images/logo.png" alt="" width="80px" class="d-inline-block align-text-top">
                        </a>
                        <a href="/home" class="agency-name text-white">{{user.agency_name}}</a>
                </div>

                <div class="" id="navbarNav">
                        <ul class="navbar-nav m-4">
                                <li class="nav-item">
                                        <a class="nav-link" href="#" id="logout">Logout</a>
                                </li>
                        </ul>
                </div>
        </div>
</nav>
<main class="container mt-5">

    <div class="detail-view d-flex flex-column justify-content-center align-items-center p-5" id="agent-id"
        data-id="{{id}}">
        <div class="hide" id="success-alert" role="alert">
            Success! Updating agent...
        </div>
        <a href="/home" class="align-self-end"><i class="fas fa-times exit " id="add-agent-btn"></i></a>

        <h1 class="mb-5" id="agent-name">Agent {{code_name}}</h1>

        <form class="detail-view d-flex flex-column justify-content-center align-items-center">
            <div class="" id="agent-form-section">
                <div class="row">
                    <div class="col-12 col-lg-6 mb-4">
                        <label for="new-agent-codename" class="form-label">Codename</label>
                        <input type="text" maxlength="13" class="form-control" id="new-agent-codename"
                            aria-describedby="codename" value="{{code_name}}">
                    </div>
                    <div class="col-12 col-lg-6 mb-3">
                        <div class="mb-2">Status</div>
                        <select class="form-select mb-3" aria-label="status" id="new-agent-status">
                            <option>Choose one</option>
                            <option value="1" selected>{{statusChosen status}}</option>
                            <option value="2">{{oppositeStatus status}}</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-lg-6 mb-4">
                        <label for="new-agent-first" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="new-agent-first" aria-describedby="firstname"
                            value="{{first}}">
                    </div>
                    <div class="col-12 col-lg-6 mb-4">
                        <label for="new-agent-last" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="new-agent-last" aria-describedby="lastname"
                            value="{{last}}">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-lg-6 mb-3">
                        <div class="mb-2">Gender</div>
                        <select class="form-select mb-3" aria-label="gender" id="new-agent-gender">
                            <option>Choose one</option>
                            <option value="1" selected>{{genderChosen gender}}</option>
                            <option value="2">{{oppositeGender gender}}</option>
                        </select>
                    </div>
                    <div class="col-12 col-lg-6 mb-4">
                        <label for="new-agent-city" class="form-label">Assigned City</label>
                        <input type="text" class="form-control" id="new-agent-city" aria-describedby="cityname"
                            value="{{location}}">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="new-agent-skills" class="form-label">Specialties</label>
                    <textarea type="text-area" class="form-control" id="new-agent-skills"
                        aria-describedby="skills">{{specialties}}</textarea>
                </div>

                <div class="row">
                    <button id="update-btn" class="col-11 col-lg-5 btn btn-success agent-detail-form-btn">Update
                        Agent</button>
                    <button id="terminate-initiate-btn"
                        class="col-11 col-lg-5 btn btn-danger agent-detail-form-btn">Terminate Agent</button>
                </div>
            </div>

            <div class="text-center hide" id="delete-confirm">
                <h1>Are you sure you want to terminate Agent <span id="deleted-agent">{{code_name}}</span>?</h1>
                <button id="terminate-confirm-btn" class="col-11 col-lg-5 btn btn-danger agent-detail-form-btn">Yes,
                    terminate.</button>
                <a href="#"> <button type="submit" id="nevermind-btn"
                        class="col-11 col-lg-5 btn btn-outline-dark agent-detail-form-btn">No, I changed my
                        mind.</button></a>
            </div>
        </form>
    </div>
</main>

<script src="/js/agent.js"></script>
<script src="/js/edit-agent.js"></script>
<script src="/js/delete-agent.js"></script>
<script src="/js/logout.js"></script>