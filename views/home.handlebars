<nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid m-lg-5 nav-details d-flex justify-content-between">
                <div class="d-flex align-items-center">
                        <a class="navbar-brand" href="#">
                                <img src="/images/logo.png" alt="" width="80px" class="d-inline-block align-text-top">
                        </a>
                        <div class="agency-name">{{user.agency_name}}</div>
                </div>

                <div class="" id="navbarNav">
                        <ul class="navbar-nav m-4">
                                <li class="nav-item">
                                        <a class="nav-link" href="#" id="logout">Logout</a>
                                </li>
                        </ul>
                </div>
        </div>
</nav>

<main class="container mt-5">
        <header class="d-flex flex-column justify-content-center align-items-center">

                <div class="d-flex align-items-center">
                        <h1 id="field-agents-headline">Field Agents </h1>
                        <i class="fas fa-plus-square" id="add-agent-btn"></i>
                </div>

                <div class="d-flex align-items-center">
                        <h1 class="hide mb-4" id="add-agent-headline">Add New Agent</h1>
                        <i class="" id="abort-create-agent"></i>
                </div>

                <div class="d-flex justify-content-center align-items-center mb-5" id="filter-set">
                        <div class="m-4 border-bottom border-2 filter" id="allAgentsFilter">All</div>
                        <div class="m-4 filter" id="activeAgentsFilter">Active</div>
                        <div class="m-4 filter" id="inactiveAgentsFilter">Inactive</div>
                </div>
        </header>

        <div class="hide" id="no-agents">
                <div class="">Welcome to Undercover. You may begin adding, updating, and terminating your field agents. Good luck out there.</div>
                <button class="btn btn-success mt-4" id="first-agent-btn">Add Agent</button>
        </div>

        {{!-- Agent Card --}}


        <div class="row d-flex justify-content-center" id="field-agent-cards">

                {{#each user.agents as |agent|}}
                
                        {{>card agent = agent}}
               
                {{/each}}

        </div>

        <form class="hide" id="add-agent-form">
                <div class="row mb-3">
                        <div class="col-12 col-lg-6">
                                <label for="new-agent-codename" class="form-label">Codename</label>
                                <input type="text" maxlength="13" class="form-control" id="new-agent-codename"
                                        aria-describedby="codename">
                        </div>
                        <div class="col-12 col-lg-6">
                                <div class="mb-2">Status</div>
                                <select class="form-select mb-3" aria-label="status" id="new-agent-status">
                                        <option>Choose one</option>
                                        <option value="1">Active</option>
                                        <option value="2">Inactive</option>
                                </select>
                        </div>
                </div>

                <div class="row mb-3">
                        <div class="mb-4 col-12 col-lg-6">
                                <label for="new-agent-first" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="new-agent-first"
                                        aria-describedby="firstname">
                        </div>
                        <div class="mb-4 col-12 col-lg-6">
                                <label for="new-agent-last" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="new-agent-last" aria-describedby="lastname">
                        </div>
                </div>
                <div class="row">
                        <div class="mb-3 col-12 col-lg-6">
                                <div class="mb-2">Gender</div>
                                <select class="form-select mb-3" aria-label="gender" id="new-agent-gender">
                                        <option>Choose one</option>
                                        <option value="1">Male</option>
                                        <option value="2">Female</option>
                                </select>
                        </div>
                        <div class="mb-3 col-12 col-lg-6">
                                <label for="new-agent-city" class="form-label">Assigned City</label>
                                <input type="text" class="form-control" id="new-agent-city" aria-describedby="cityname">
                        </div>
                </div>

                <div class="mb-3">
                        <label for="new-agent-skills" class="form-label">Specialties</label>
                        <textarea type="text-area" class="form-control" id="new-agent-skills"
                                aria-describedby="skills"></textarea>
                </div>
                <button type="submit" id="new-agent-btn" class="col-12 btn btn-success agent-detail-form-btn text-center">Add
                        Agent</button>
        </form>
</main>

<script src="/js/home.js"></script>
<script src="/js/logout.js"></script>
<script src="/js/new-agent.js"></script>